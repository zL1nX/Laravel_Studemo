<?php if(count($errors)>0): ?>
    <div class="alert alert-danger">
        <button class="close" type="button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <ul>
            <?php foreach($errors->all() as $error): ?>
                <li>
                    <?php echo e($error); ?>

                </li>
            <?php endforeach; ?>
        </ul>
    </div>
<?php endif; ?>